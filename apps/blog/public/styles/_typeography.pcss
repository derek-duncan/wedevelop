h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font-serif);
  font-weight: 700;
  line-height: 1.1;
}

p {
  padding: 0 0 2rem;

  font-size: 1.6rem;
  line-height: 1.5;
}

.dropCap {
  float: left;
  display: inline-block;
  padding: 1rem 3rem 1rem 0;
  font: 600 6rem/1 var(--font-sans);
  text-transform: uppercase;
}
